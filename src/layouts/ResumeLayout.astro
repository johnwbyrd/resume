---
import type { ResumeData } from '../types/resume';
import '../styles/base.css';

interface Props {
    resume: ResumeData;
}

const { resume } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content={`${resume.personalInfo.name} - Professional Resume`}>
        <title>{resume.personalInfo.name} - Resume</title>
    </head>
    <body class="min-h-screen bg-white">
        <div class="max-w-4xl mx-auto px-4 md:px-8 py-8">
            <slot name="header" />
            <main class="mt-8 space-y-12">
                <slot />
            </main>
        </div>
    </body>
</html>

<style>
    /* Print-specific styles */
    @media print {
        body {
            print-color-adjust: exact;
            -webkit-print-color-adjust: exact;
        }

        /* Ensure page breaks don't occur within components */
        .resume-section {
            break-inside: avoid;
        }

        /* Remove sticky positioning when printing */
        .sticky {
            position: static !important;
        }
    }
</style>