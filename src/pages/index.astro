---
import ResumeLayout from '../layouts/ResumeLayout.astro';
import Header from '../components/Header.astro';
import Experience from '../components/Experience.astro';
import Skills from '../components/Skills.astro';
import Academic from '../components/Academic.astro';
import type { ResumeData } from '../types/resume';  // Changed this line

// Import the JSON data
import resumeDataRaw from '../data/resume.json';

// Type assertion for the imported JSON
const resumeData = resumeDataRaw as ResumeData;
---

<ResumeLayout resume={resumeData}>
  <Header slot="header" personalInfo={resumeData.personalInfo} />
  
  <Skills items={resumeData.skills} />
  <Experience jobs={resumeData.experience} />
  <Academic data={resumeData.academic} />
</ResumeLayout>