{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["astro/client"],
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/components/**/*.astro",
    "src/layouts/**/*.astro",
    "src/pages/**/*.astro",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
